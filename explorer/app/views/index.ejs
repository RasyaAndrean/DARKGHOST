<!DOCTYPE html>
<html>
  <head>
    <title><%= coin %> Devnet Explorer</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><%= coin %> Explorer</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/blocks">Blocks</a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <h1><%= coin %> Devnet Explorer</h1>
          <p class="lead">Explore the DarkGhost blockchain</p>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-6">
          <h3>Latest Blocks</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Height</th>
                <th>Age</th>
                <th>Transactions</th>
                <th>Size</th>
              </tr>
            </thead>
            <tbody>
              <% blocks.forEach(block => { %>
              <tr>
                <td>
                  <a href="/block/<%= block.height %>"><%= block.height %></a>
                </td>
                <td><%= moment(block.timestamp).fromNow() %></td>
                <td><%= block.txCount %></td>
                <td><%= block.size %> bytes</td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <div class="col-md-6">
          <h3>Latest Transactions</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Transaction ID</th>
                <th>Age</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(tx => { %>
              <tr>
                <td>
                  <a href="/tx/<%= tx.txid %>"
                    ><%= tx.txid.substring(0, 16) %>...</a
                  >
                </td>
                <td><%= moment(tx.timestamp).fromNow() %></td>
                <td><%= tx.amount %> <%= symbol %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-12">
          <h3>Network Information</h3>
          <table class="table table-striped">
            <tbody>
              <tr>
                <td>Network</td>
                <td><%= network.name %></td>
              </tr>
              <tr>
                <td>Block Time</td>
                <td><%= network.blockTime %> seconds</td>
              </tr>
              <tr>
                <td>Confirmations</td>
                <td><%= network.confirmations %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <footer class="footer mt-5 py-3 bg-light">
      <div class="container text-center">
        <span class="text-muted"><%= coin %> Devnet Explorer v0.1.0</span>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  </body>
</html>
