<!DOCTYPE html>
<html>
  <head>
    <title>Block <%= block.height %> - <%= coin %> Devnet Explorer</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><%= coin %> Explorer</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/blocks">Blocks</a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <h1>Block #<%= block.height %></h1>
          <p>
            Details for block <%= block.height %> on the <%= coin %> blockchain
          </p>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-12">
          <h3>Block Information</h3>
          <table class="table table-striped">
            <tbody>
              <tr>
                <td>Height</td>
                <td><%= block.height %></td>
              </tr>
              <tr>
                <td>Timestamp</td>
                <td>
                  <%= moment(block.timestamp).format('YYYY-MM-DD HH:mm:ss') %>
                  (<%= moment(block.timestamp).fromNow() %>)
                </td>
              </tr>
              <tr>
                <td>Hash</td>
                <td><%= block.hash %></td>
              </tr>
              <tr>
                <td>Transactions</td>
                <td><%= block.txCount %></td>
              </tr>
              <tr>
                <td>Size</td>
                <td><%= block.size %> bytes</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-12">
          <h3>Transactions</h3>
          <% if (transactions.length > 0) { %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Transaction ID</th>
                <th>Amount</th>
                <th>Fee</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(tx => { %>
              <tr>
                <td>
                  <a href="/tx/<%= tx.txid %>"
                    ><%= tx.txid.substring(0, 16) %>...</a
                  >
                </td>
                <td><%= tx.amount %> <%= symbol %></td>
                <td><%= tx.fee %> <%= symbol %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <% } else { %>
          <p>No transactions in this block.</p>
          <% } %>
        </div>
      </div>
    </div>

    <footer class="footer mt-5 py-3 bg-light">
      <div class="container text-center">
        <span class="text-muted"><%= coin %> Devnet Explorer v0.1.0</span>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  </body>
</html>
